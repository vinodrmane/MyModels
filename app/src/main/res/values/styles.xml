<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Bottom NavigationBar Style-->
    <style name="BottomNavigation">
        <item name="android:background">@drawable/bottom_nav_bg_color</item>
        <item name="android:itemBackground">@drawable/bottom_nav_bg_color</item>
        <item name="itemIconTint">@color/colorAccent</item>
        <item name="itemTextColor">@color/colorAccent</item>
    </style>
</resources>
